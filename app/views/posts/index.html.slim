h1 style="text-align: center"
  | Post Listing


- if params[:user_id].present?
    p style="font-size: 25px; margin-left:79px" Displaying Posts of user id : #{params[:user_id]}

    = button_to "Show all posts", posts_path, method: :get, style: "float: right; margin-right: 90px; background-color: black; color: white; font-size:15px; width: 150px; height:50px; border-radius:10px"
end

= button_to "Create new post", new_post_path, method: :get, style: "float: right; margin-right: 88px; background-color: black; color: white; font-size:15px; width: 150px; height:50px; border-radius:10px",id: "create-posts"



        
- if params[:user_id].present?
    table
        tr
            th Post Id
            th Title 
            th description
            th User Id
            th User Name
            th colspan=4 Action
            
            - @posts.each do |post|
                tr
                    td = post.id
                    td = post.title
                    td = post.description
                    td = post.user_id
                    td = post.user.name
                    td = link_to "View", post_path(post), method: :get , style:"text-decoration:none; color: white; border: 1px solid black;font-size: 15px; padding: 7px; border-radius: 10px; height:15px; background-color:black"
                    td = link_to "Edit", edit_post_path(post) , method: :get, style:"text-decoration:none; color: white; border: 1px solid black;font-size: 15px; padding: 7px; border-radius: 10px; height:15px; background-color:black"
                    td = button_to "Delete", post_path(post), method: :delete, style:"background-color: black; color: white; border: 1px solid black;font-size:15px; width: 70px; height:34px; border-radius:10px"
                    td = link_to "View User Details", user_path(post.user_id) , method: :get, style:"text-decoration:none; color: white; border: 1px solid black;font-size: 15px; padding: 7px; border-radius: 10px; height:15px; background-color:black"
                    td = link_to "View Comments", comment_path(post.id), method: :get, style:"text-decoration:none; color: white; border: 1px solid black;font-size: 15px; padding: 7px; border-radius: 10px; height:15px; background-color:black"
      


-else
    table
        tr
            th
              | Post Id
            th Title 
            th description
            th User ID                
            th colspan=4 Action   


            - @posts.each do |post| 
                tr
                    td = post.id
                    td = post.title
                    td = post.description
                    td = post.user_id
                    td = link_to "View", post_path(post), method: :get, style:"text-decoration:none; color: white; border: 1px solid black;font-size: 15px; padding: 7px; border-radius: 10px; height:15px; background-color:black"
                    td = link_to "Edit", edit_post_path(post) , method: :get, style:"text-decoration:none; color: white; border: 1px solid black;font-size: 15px; padding: 7px; border-radius: 10px; height:15px; background-color:black"
                    td = button_to "Delete", post_path(post), method: :delete, style: "background-color: black; color: white; border: 1px solid black;font-size:15px; width: 70px; height:34px; border-radius:10px"
                    td = link_to "View Comments", comments_path(post_id: post.id), method: :get, style:"text-decoration:none; color: white; border: 1px solid black;font-size: 15px; padding: 7px; border-radius: 10px; height:15px; background-color:black"
                    

end

