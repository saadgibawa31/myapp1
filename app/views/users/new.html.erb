<h1> Create New User </h1>

<%= form_with(model: @user, local: true) do |form| %>
    <div>
        <%= form.label :name%>
        <%= form.text_field :name%>
    </div>

    <div>
        <%= form.label :email%>
        <%= form.email_field :email%>
    </div>

    <div>
        <%= form.label :username %>
        <%= form.text_field :username%>
    </div>

    <div>
        <%= form.label :password%>
        <%= form.password_field :password %>
    </div>

    <div>
        <%= form.submit "Create User"%>
    </div>

    <% end %>
